		"framer-motion": "^12.23.26",
		"lucide-react": "^0.556.0",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-hook-form": "^7.65.0",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
